.sidebar_section.panel,
form fieldset.inputs,
#main_content .panel {
  border-color: #ddd;
}

.sidebar_section.panel h3,
form fieldset.inputs legend,
#main_content .panel h3 {
  color: #333333;
  background-color: #f5f5f5;
  border-color: #ddd;
}

a.nav-link {
  border-radius: 0 !important;
  border-top: 0 !important;
}

a.nav-link.active {
  color: #495057;
  background-color: #fff !important;
  border-color: #fff #dee2e6 #fff !important;
  border-radius: 0;
}

li.nav-item:first-child {
.nav-link.active {
  border-color: #fff #dee2e6 #fff #fff !important;
  border-radius: 0;
}
}

.formio-form .form-group:last-child {
  margin-bottom: 0;
}

form .formio-form .form-group {
  margin-right: 0;
  margin-left: 0;
}

.panel_contents pre {
  margin-bottom: 0;
}

.formio-read-only {
  .choices.form-group.formio-choices.is-disabled {
    select.choices__input,
    .choices__list--single button.choices__button,
    .choices__list--dropdown {
      display: none !important;
    }
  }
  input.formio-select-autocomplete-input {
    display: none !important;
  }
}

#main_content {
  .side-by-side {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    width: 100%;

    &> * {
      flex: 1 1 50%;
    }

    &> * + * {
      margin-left: 15px;
    }
  }
}

.form_answers.ui-sortable {
  fieldset ol {
    display: flex;
    flex-direction: row;
    
    li.input {
      display: flex;
      flex-direction: column;
      margin-bottom: 0;
      
      label {
        display: none;
      }
    }

    li.ui-sortable-handle {
      text-align: center;
      width: 50px;
      background: #eeeeee;
      color: #999;
      border-radius: 3px;
      order: -1;
      margin-left: 0;
      margin-right: 16px;
    }
    
    li + li {
      margin-left: 16px;
    }
  }
}
