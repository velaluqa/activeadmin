.bg-head
  %h3 Please Sign In
= form_for(resource, :as => resource_name, :url => user_session_path, :html => { :class => 'form-login'}) do |f|
  .form-group.form-group-lg
    = f.label(:username, :class => 'sr-only')
    = f.text_field(:username, :class => 'form-control', :placeholder => 'Username')
  .form-group.form-group-lg
    = f.label(:password, :class => 'sr-only')
    = f.password_field(:password, :class => 'form-control', :placeholder => 'Password')
  %div#submit_box
    - if devise_mapping.rememberable? and false
      = f.label(:remember_me, :class => 'checkbox pull-left') do
        = f.check_box :remember_me
        Remember me
    - else
      = f.hidden_field(:remember_me, :value => false)
    -# .pull-left
    -#   = render "devise/shared/links"
    .pull-right
      = f.submit("Sign in", :class => 'btn btn-lg btn-primary btn-block')
