.row-fluid
  .offset4.span4
    = form_for(resource, :as => resource_name, :url => user_session_path, :html => { :class => 'form-login'}) do |f|
      %h2.form-signin-heading
        pharmtrace ERICA

      = f.text_field(:username, :class => 'input-block-level', :placeholder => 'Username')
      = f.password_field(:password, :class => 'input-block-level', :placeholder => 'Password')

      %div#submit_box
        - if devise_mapping.rememberable? and false
          = f.label(:remember_me, :class => 'checkbox pull-left') do
            = f.check_box :remember_me
            Remember me
        - else
          = f.hidden_field(:remember_me, :value => false)
        
        .pull-right= f.submit("Sign in", :class => 'btn btn-primary btn-large')
