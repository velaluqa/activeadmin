.row-fluid
  .offset4.span4
    = form_for(resource, :as => resource_name, :url => user_session_path, :html => { :class => 'form-login'}) do |f|
      %h2.form-signin-heading
        pharmtrace ERICA

      = f.text_field(:username, :class => 'input-block-level', :placeholder => 'Username')
      = f.password_field(:password, :class => 'input-block-level', :placeholder => 'Password')

      - if devise_mapping.rememberable?
        = f.label(:remember_me, :class => 'checkbox') do
          = f.check_box :remember_me
          Remember me
          .pull-right= f.submit("Sign in", :class => 'btn btn-primary btn-large')

          -#      = render "devise/shared/links"
