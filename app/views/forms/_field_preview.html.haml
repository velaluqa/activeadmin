.row-fluid
  -#.span4.lead= label_tag(field['id'], field['label'])
  %strong.span4= field['label']
  %span.span8{:name => field['id'], :'data-type' => field['type']}
    - unless field['answer'].nil?
      - case field['type']
      - when 'bool'
        = (field['answer'] ? "Yes" : "No")
      - when 'select'
        = "#{field['values'][field['answer']]} (#{field['answer']})"
      - else
        = field['answer']
