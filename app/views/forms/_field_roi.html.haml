= label_tag(field['id'], field['label'], :class => 'control-label')
.controls
  - value, fixed_value_hash = fixed_value(field, data_hash)
  - value = field['selected_option'] if value.nil?
  - selected_value = [value]
  - if @case.state == :reopened_in_progress
    - roi_value = value_for_reopened_case(field, @case)
    - unless roi_value.nil?
      - if roi_value.is_a?(String)
        - selected_value = [roi_value]
        - old_roi_option = ''
      - else
        - selected_value = []
        - old_roi_option = "<option data-permanent-select-option=\"true\" value=\"#{JSON::generate(roi_value)}\" selected=\"selected\">Keep old ROI</option>"
  - old_roi_option = '' if old_roi_option.nil?
  = select_tag(field['id'], (old_roi_option+options_from_values(field, selected_value)).html_safe, { :class => "#{input_size} select-roi", :'data-roi-values' => (field['roi_values'].nil? ? '{}' : field['roi_values'].to_json)}.merge(validators_hash(field)))
  %p.help-block
