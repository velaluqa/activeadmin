= label_tag(field['id'], field['label'].html_safe, :class => 'control-label')
.controls
  - value, fixed_value_hash = fixed_value(field, data_hash)
  - value = value_for_reopened_case(field, @case) if(@case.state == :reopened_in_progress and value.nil?)
  .input-append.date.datepicker-field{:'data-date-format' => 'dd-mm-yyyy'}
    = text_field_tag(field['id'], value, { :class => input_size, :readonly => true }.merge(validators_hash(field)).merge(fixed_value_hash))
    %span.add-on
      %i.icon-th
  %p.help-block
