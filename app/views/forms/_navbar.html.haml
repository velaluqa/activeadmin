#form-navbar.navbar.navbar-fixed-top
  .navbar-inner
    %a.brand= @case.name
    %ul.nav
      %li
        %a{:href => '#form-top'} Top
      - @form_config.each do |field|
        - if(field['type'] == 'add_repeat')
          %li
            %a{:href => '#group-heading-'+field['id']}= field['group-label']
      %li.divider
      %li.dropdown
        %a.dropdown-toggle{:'data-toggle' => 'dropdown', :href => '#'}
          Add..
          %span.caret
        %ul.dropdown-menu
          - @form_config.each do |field|
            - if(field['type'] == 'add_repeat')
              %li
                %a.add-repeat-btn{:'data-id' => field['id'], :'data-max-repeats' => field['max'], :href => '#'}= field['group-label']
    %button#refresh-rois-btn.btn.pull-right{:type => 'button', :'data-loading-text' => 'Refreshing...'} Refresh Measurements
