= semantic_form_for @case, :url => edit_comment_admin_case_path(@case, :return_url => @return_url), :method => :post do |f|
  = f.inputs 'Edit Comment' do
    = f.input :comment

  = f.actions do
    = f.action :submit, :as => :input
    = f.action :cancel, :as => :link, :wrapper_html => {:class => 'cancel'}
  