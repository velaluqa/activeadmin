%fieldset#visit_templates.inputs
  %legend
    %span Visit Preset
  %ol
    %li#visit_template_select
    %li#visit_template_preview

= javascript_include_tag 'patients/visit_templates'
:javascript
  $(function() {
    visitTemplatesForm({
      selected_study: #{local_assigns.fetch(:selected_study, nil).to_json.html_safe},
      visit_templates: #{local_assigns.fetch(:templates, {}).to_json.html_safe},
      preselect: #{local_assigns.fetch(:preselect, nil).to_json.html_safe},
      allow_clear: #{local_assigns.fetch(:allow_clear, nil).to_json.html_safe},
      create_patient: #{local_assigns.fetch(:create_patient, nil).to_json.html_safe}
    })
  });
