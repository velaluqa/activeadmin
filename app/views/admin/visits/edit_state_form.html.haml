= semantic_form_for @visit, :url => edit_state_admin_visit_path(@visit, :return_url => @return_url), :method => :post do |f|
  = f.inputs 'Edit State' do
    = f.input :state, :as => :select, :collection => @states, :include_blank => false

  = f.actions do
    = f.action :submit, :as => :input
    = f.action :cancel, :as => :link, :wrapper_html => {:class => 'cancel'}
