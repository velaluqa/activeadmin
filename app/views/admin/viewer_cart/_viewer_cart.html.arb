panel 'Viewer Cart' do
  if(cart.empty?)
    para "Your viewer cart is currently empty. Add items via the \"Add to viewer cart\" batch action, for example on image series' or patients."
  else
    ul do
      cart.each do |cart_item|
        li do
          pp cart_item
          link_to(cart_item[:resource].name, cart_item_url(cart_item)) + ' (' + link_to('-', admin_viewer_cart_remove_path(:type => cart_item[:type], :id => cart_item[:id])) + ')'
        end
      end
    end
  end
end

unless(cart.empty?)
  a :class => 'button', :href => admin_viewer_cart_start_path do
    'Start Viewer'
  end
  a :class => 'button', :href => admin_viewer_cart_clear_path, :'data-confirm' => 'This will remove all items from the cart. Are you sure?' do
    'Clear cart'
  end
end
