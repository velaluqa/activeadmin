.container-fluid
  .row
    .editor.col-md-6
      .wrapper
        .header
          %label Template
          .buttons
            %a{ href: '/admin/help/email_templates', target: '_blank' }
              %i.fa.fa-question
            %a{ href: '/admin/help/editor_keyboard_shortcuts', target: '_blank' }
              %i.fa.fa-keyboard-o
        %pre#editor
    .preview.col-md-6.padded#email-template-preview-container
      %fieldset.inputs.headless
        %ol
          %li.string.input.optional.stringish
            %label Resource for Preview
            %select#preview-resource{ name: 'email_template[preview_record]', style: 'width: 200px' }
        .iframe-wrapper
          .spinner
          %iframe#preview{ width: '100%', height: '100%' }
= javascript_include_tag '/ace/ace.js'
= javascript_include_tag 'email_templates/form'
