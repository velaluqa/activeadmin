= semantic_form_for @upload_configuration_form, :url => url, :method => :post do |f|
  = f.inputs 'Upload Configuration' do
    = f.input :id, as: :hidden
    = f.input :file, :label => 'Configuration File', :as => :file
    = f.input :file_cache, :as => :hidden
    - if f.object.forcable?
      = f.input :force, as: :boolean
  = f.actions do
    = f.action :submit, :as => :input, label: 'Upload Configuration'
    = f.action :cancel, :as => :link, label: 'Cancel', :wrapper_html => {:class => 'cancel'}
