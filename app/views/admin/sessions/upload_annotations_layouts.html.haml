= semantic_form_for @session, :url => url, :method => :post do |f|
  = f.inputs "Annotations Layout" do
    = f.input :case_type, :label => 'Case Type', :as => :select, :collection => @case_types, :required => true
    = f.input :annotations_layout_mode, :label => 'Mode', :as => :radio, :collection => {'Regular' => :regular, 'Validation' => :validation}, :required => true
    = f.input :file, :label => 'Annotations Layout', :as => :file, :required => true

  = f.actions do
    = f.action :submit, :as => :input, :label => 'Submit'
    = f.action :cancel, :as => :link, :label => 'Cancel', :wrapper_html => {:class => 'cancel'}